---
import Quotecard from "../../components/card.astro";
import Grid from "../../components/grid.astro"
---


<html lang="en">
    <head>
        <script src="/bye-mr-gwilt/data.js" defer></script>
    </head>
    <body>
    <div class = "quote-section" id = "quote-section">
    </div>
    </body>

    <style>
       :global(.quote-section) {
        display: flex;
        padding: 4em;
        flex-wrap: wrap;
        justify-content: center;
        display: grid;
        grid-template-columns: 1fr 1fr ;
       }
       @media only screen and (max-width: 900px) {
      :global(.quote-section) {
        grid-template-columns: 1fr;
      }
    }



    :global(.quote) {
      font-family: "Bungee", "sans-serif";
      font-style: italic;
      font-size: 1em;
      font-weight: 300;
    }

    :global(.name) {
      font-family: "Bungee", "sans-serif";
    }
    </style>
</html>