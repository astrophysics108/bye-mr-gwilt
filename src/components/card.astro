<style>
    
  .container {
    display: flex; 
    flex-direction: column;
    min-height: 20em; 
    margin: 2em;
    border-radius: 20px;
    overflow: hidden;
    box-shadow: 8px 8px 36px 0px rgba(0, 0, 0, 0.3);
    padding: 2em;
    background-color: #8557aa;
    flex: 1 1 80vw; 
    max-width: 45%; 
}
  .container:hover {
    transition: 0.4s;
  }
  .container :global(.wrapper) {
    height: inherit;
  }
  .container :global(div img) {
    width: 100%;
    object-fit: cover;
    height: 35vh;
    display: flex;
    margin: auto;

    border-radius: 18px;
  }

  .container :global(p) {
    font-weight: 400;
    font-style: normal;
  }
</style>

<div class="container">
  <slot />
</div>